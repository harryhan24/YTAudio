<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/source_link_destination">

    <fragment
        android:id="@+id/source_link_destination"
        android:name="com.example.ytaudio.screens.url_link.SourceLinkFragment"
        android:label="SourceLinkFragment"
        tools:layout="@layout/source_link_fragment">
        <action
            android:id="@+id/action_source_link_destination_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_source_link_destination_to_playerFragment"
            app:destination="@id/playerFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/audioPlayerFragment"
        android:name="com.example.ytaudio.screens.audio_player.AudioPlayerFragment"
        android:label="AudioPlayerFragment"
        tools:layout="@layout/audio_player_fragment" >
        <argument
            android:name="linkURL"
            app:argType="string" />
        <argument
            android:name="photoLink"
            app:argType="string" />
        <argument
            android:name="titleText"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.ytaudio.screens.player.PlayerFragment"
        android:label="PlayerFragment" >
        <argument
            android:name="audioUrl"
            app:argType="string" />
        <argument
            android:name="photoUrl"
            app:argType="string" />
        <argument
            android:name="titleText"
            app:argType="string" />
    </fragment>
</navigation>