<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/playlistFragment">

    <fragment
        android:id="@+id/sourceLinkFragment"
        android:name="com.example.ytaudio.screens.url_link.SourceLinkFragment"
        android:label="SourceLinkFragment"
        tools:layout="@layout/source_link_fragment">
        <action
            android:id="@+id/action_sourceLinkFragment_to_playlistFragment"
            app:destination="@id/playlistFragment" />
    </fragment>
    <fragment
        android:id="@+id/audioPlayerFragment"
        android:name="com.example.ytaudio.screens.audio_player.AudioPlayerFragment"
        android:label="AudioPlayerFragment"
        tools:layout="@layout/audio_player_fragment">
        <argument
            android:name="audioId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.ytaudio.screens.player.PlayerFragment"
        android:label="PlayerFragment"
        tools:layout="@layout/player_fragment" />
    <fragment
        android:id="@+id/playlistFragment"
        tools:layout="@layout/playlist_fragment"
        android:name="com.example.ytaudio.screens.playlist.PlaylistFragment"
        android:label="PlaylistFragment">
        <action
            android:id="@+id/action_playlistFragment_to_source_link"
            app:destination="@id/sourceLinkFragment" />
        <action
            android:id="@+id/action_playlistFragment_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment" />
    </fragment>
</navigation>